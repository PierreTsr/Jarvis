<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Jarvis</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <!-- <%= stylesheet_link_tag :recommendations %> -->
  </head>
  <body>
   
<main>

  <section class="text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Categories</h1>
        <p class="lead text-muted">Please select a business cateogry.</p>
        
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @categories.each do |category| %>
        <div class="col">
          <div class="card shadow-sm">
          <%= image_tag(category + '.jpg', class:"card-img-top", style:"object-fit:cover; object-position: bottom;width:100%; height:225px;") %>
            <%# <img src="/assets/joes.jpg" class="card-img-top" style="object-fit:cover; object-position: bottom;width:100%; height:225px;"> %>
            <div class="card-body">
              <%# <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> %>
               <div class="d-flex justify-content-between align-items-center">
                 <p> <%= category.capitalize %> </p>
               </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "See Recommendations", recommendations_path(:category => category), class:"btn btn-sm btn-outline-secondary", id: category %>
                  <%# <button type="button" class="btn btn-sm btn-outline-secondary" >See Recommendations</button> %>
                  
                </div>
                <%# <small class="text-muted"> <%= business.price  </small> %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </main> 
  <%= javascript_include_tag 'recommendations' %> 
  </body>
</html>